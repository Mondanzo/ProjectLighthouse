@page "/passwordResetRequest"
@model LBPUnion.ProjectLighthouse.Servers.Website.Pages.PasswordResetRequestForm
@using LBPUnion.ProjectLighthouse.Localization.StringLists

@{
    Layout = "Layouts/BaseLayout";
    Model.Title = "Password Reset";
}             
        
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="container box-container box-background error">
        <div class="divider-dashed no-margin"></div>
        <div class="box-margin">
            <h3 class="header no-margin">
            @Model.Translate(GeneralStrings.Error)
            </h3>
            <p class="no-margin">@Model.Error</p>
        </div>
        <div class="divider-dashed no-margin"></div>
    </div>
}
         
@if (!string.IsNullOrWhiteSpace(Model.Status))
{
    <div>
        <div class="header">
            Success!
        </div>
        <p style="white-space: pre-line">@Model.Status</p>
    </div>
}

<form method="post">
    @Html.AntiForgeryToken() 
    <div>
        <input type="text" autocomplete="no" id="username" placeholder="Username" name="username"/>
    </div>
    <input type="submit" value="Request Password Reset" class="bg-pink"/>
</form>